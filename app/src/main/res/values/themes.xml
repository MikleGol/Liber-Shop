<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LiberShop" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.LiberShop" parent="Theme.Material3.Light.NoActionBar">
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorPrimary">@color/light_beige</item>
        <item name="colorOnPrimary">@color/light_beige</item>
        <item name="colorAccent">@color/light_beige</item>
    </style>

    <style name="ImageView.Round" parent="">
        <item name="cornerSize">15%</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:textColor">@color/light_beige</item>
        <item name="android:textColorPrimary">@color/light_beige</item>
        <item name="android:textColorSecondary">@color/light_beige</item>
        <item name="android:colorPrimary">@color/light_beige</item>
        <item name="android:colorAccent">@color/light_beige</item>
        <item name="textFillColor">@color/light_beige</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MyDialogBodyText</item>
    </style>

    <style name="MyDialogBodyText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/light_beige</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/beige_selected</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@color/beige_dark</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/light_beige</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@color/beige_dark</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">

    </style>
</resources>